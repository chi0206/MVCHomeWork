@model IEnumerable<MVCHomeWork.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p class="form-inline">
        <label>關鍵字：</label>@Html.TextBox("keyword")
    </p>
}
<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "客戶名稱",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.客戶名稱)
