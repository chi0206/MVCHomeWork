                    sortBy = "客戶名稱",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "統一編號",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.統一編號)
            <a href="@Url.Action("Index", new {
                    sortBy = "統一編號",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "電話",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.電話)
            <a href="@Url.Action("Index", new {
                    sortBy = "電話",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "傳真",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.傳真)
            <a href="@Url.Action("Index", new {
                    sortBy = "傳真",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "地址",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.地址)
            <a href="@Url.Action("Index", new {
                    sortBy = "地址",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "Email",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.Email)
