@model IEnumerable<MVCHomeWork.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p class="form-inline">
        <label>關鍵字：</label>@Html.TextBox("searchString") &ensp;
        <input type="submit" value="搜尋" class="btn btn-sm btn-info" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶名稱)*@
            @Html.ActionLink("客戶名稱","Index",new { sortOrder = ViewBag.客戶名稱Sort , searchString = ViewBag.searchString })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.統一編號)*@
            @Html.ActionLink("統一編號", "Index", new { sortOrder = ViewBag.統一編號Sort , searchString = ViewBag.searchString })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.電話)*@
            @Html.ActionLink("電話", "Index", new { sortOrder = ViewBag.電話Sort , searchString = ViewBag.searchString })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.傳真)*@
            @Html.ActionLink("傳真", "Index", new { sortOrder = ViewBag.傳真Sort , searchString = ViewBag.searchString })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.地址)*@
            @Html.ActionLink("地址", "Index", new { sortOrder = ViewBag.地址Sort , searchString = ViewBag.searchString })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSort })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
