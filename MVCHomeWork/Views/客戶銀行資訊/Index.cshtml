@model IEnumerable<MVCHomeWork.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p class="form-inline">
        <label>關鍵字：</label>@Html.TextBox("keyword")
    </p>
}
<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "銀行名稱",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.銀行名稱)
            <a href="@Url.Action("Index", new {
                    sortBy = "銀行名稱",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>

        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "銀行代碼",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.銀行代碼)
            <a href="@Url.Action("Index", new {
                    sortBy = "銀行代碼",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "分行代碼",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.分行代碼)
            <a href="@Url.Action("Index", new {
                    sortBy = "分行代碼",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "帳戶名稱",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.帳戶名稱)
            <a href="@Url.Action("Index", new {
                    sortBy = "帳戶名稱",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "帳戶號碼",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.帳戶號碼)
            <a href="@Url.Action("Index", new {
                    sortBy = "帳戶號碼",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "客戶資料.客戶名稱",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
            <a href="@Url.Action("Index", new {
                    sortBy = "客戶資料.客戶名稱",
                    sortDirection = "DESC",
                    keyword = Html.Value("keyword") })">⬇</a>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.銀行名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶號碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
